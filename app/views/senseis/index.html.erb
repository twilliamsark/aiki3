<h1>Listing senseis</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @senseis.each do |sensei| %>
      <tr>
        <td><%= sensei.id %></td>
        <td><%= sensei.name %></td>
        <td><%= link_to 'Show', sensei %></td>
        <td><%= link_to 'Edit', edit_sensei_path(sensei) %></td>
        <td><%= link_to 'Destroy', sensei, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sensei', new_sensei_path %>
