

<p>
  <strong>Name:</strong>
  <%= @video.name rescue 'n/a' %>
</p>

<p>
  <strong>Waza:</strong>
  <% if @video.waza %>
    <%= link_to @video.waza, @video.waza %>
  <% else %>
    'n/a'
  <% end %>
</p>

<% if @video.waza %>
<p>
  <strong>Video:</strong>
  <%= link_to image_tag("http://img.youtube.com/vi/#{@video.youtube_id}/default.jpg", class: "header_image", size: "120x90"),
                waza_display_path(waza_id: @video.waza.id, video_id: @video.id) %>
</p>
<% end %>

<p>
  <strong>Aiki format:</strong>
  <%= @video.aiki_format rescue 'n/a' %>
</p>

<% if @video.aiki_format.to_s == 'Aiki Toho' %>
  <p>
    <strong>Kata:</strong>
    <%= @video.kata rescue 'n/a' %>
  </p>
<% end %>

<p>
  <strong>Sensei:</strong>
  <%= @video.sensei rescue 'n/a' %>
</p>

<p>
  <strong>Style:</strong>
  <%= @video.style rescue 'n/a' %>
</p>

<p>
  <strong>Rank:</strong>
  <%= @video.rank rescue 'n/a' %>
</p>

<p>
  <strong>On test:</strong>
  <%= @video.on_test rescue 'n/a' %>
</p>

<p>
  <strong>Youtube:</strong>
  <%= @video.youtube_id rescue 'n/a' %>
</p>

<% if Rails.env.development? %>
<p>
  <strong>Keywords:</strong>
  <%= @video.keywords rescue 'n/a' %>
</p>
<% end %>


<%= link_to 'Edit', edit_video_path(@video) %> |
<%= link_to 'Back', videos_path %>
