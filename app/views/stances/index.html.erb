<h1>Listing stances</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @stances.each do |stance| %>
      <tr>
        <td><%= stance.id %></td>
        <td><%= stance.name %></td>
        <td><%= stance.description %></td>
        <td><%= link_to 'Show', stance %></td>
        <td><%= link_to 'Edit', edit_stance_path(stance) %></td>
        <td><%= link_to 'Destroy', stance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

